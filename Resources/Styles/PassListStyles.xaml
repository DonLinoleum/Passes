<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             >

    <Style x:Key="grid_top" TargetType="Grid">
        <Setter Property="Padding" Value="10"></Setter>
        <Setter Property="BackgroundColor" Value="#ffffff"></Setter>
        <Setter Property="Margin" Value="0,0,0,10"></Setter>
    </Style>
    <Style x:Key="rounded_white_border" TargetType="Border">
        <Setter Property="Stroke" Value="#ffffff"></Setter>
        <Setter Property="StrokeShape" Value="RoundRectangle 10"></Setter>
        <Setter Property="BackgroundColor" Value="#ffffff"></Setter>
    </Style>
    <Style x:Key="stack_props_labels" TargetType="StackLayout">
        <Setter Property="Orientation" Value="Horizontal"></Setter>
        <Setter Property="Margin" Value="0,0,0,6"></Setter>
    </Style>
    <Style x:Key="label_text_margin_right" TargetType="Label">
        <Setter Property="Margin" Value="0,0,4,0"></Setter>
        <Setter Property="FontAttributes" Value="Bold"></Setter>
    </Style>
    <Style x:Key="filter_count_ellipse" TargetType="Label">
        <Setter Property="FontSize" Value="13"></Setter>
        <Setter Property="HorizontalOptions" Value="Center"></Setter>
        <Setter Property="VerticalOptions"  Value="Center"></Setter>
        <Setter Property="TextColor" Value="#ffffff"></Setter>
    </Style>
   
</ResourceDictionary>
