<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Passes.Resources.Styles.ProfileStyles">

    <Style x:Key="editor_wrapper" TargetType="Border">
        <Setter Property="Stroke" Value="#ffffff"></Setter>
        <Setter Property="Margin" Value="0,5,0,20"></Setter>
        <Setter Property="StrokeShape" Value="RoundRectangle 10"></Setter>
    </Style>
    <Style x:Key="16px" TargetType="Label">
        <Setter Property="FontSize" Value="16"></Setter>
    </Style>
    <Style x:Key="profile_button" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#2056AE"></Setter>
        <Setter Property="Margin" Value="0,0,0,20"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
    </Style>
    <Style x:Key="profile_editor" TargetType="Editor">
        <Setter Property="BackgroundColor" Value="#f6f6f8"></Setter>
        <Setter Property="FontSize" Value="14"></Setter>
    </Style>
</ResourceDictionary>